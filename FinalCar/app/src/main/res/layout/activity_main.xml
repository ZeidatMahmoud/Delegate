<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".activities.Login">

    <ImageView android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_marginRight="70dp"
               android:layout_marginLeft="70dp"
               android:src="@drawable/logonew"
               android:layout_marginTop="20dp"
               android:id="@+id/logoViewLogin"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginRight="30dp"
              android:hint="الرقم الوطني"
              android:textColor="@color/textColor"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:background="@drawable/textfeilds_border"
              android:textColorHint="@color/hintColor"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="30dp"
              android:id="@+id/LoginUserName"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="50dp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:textColor="@color/textColor"
              android:id="@+id/loginPassword"
              android:hint="رمز الدخول"
              android:background="@drawable/textfeilds_border"
              android:layout_marginRight="30dp"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="20dp"
              android:textColorHint="@color/hintColor"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="70dp">
        <ProgressBar android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/loginBar"
                     android:layout_marginRight="30dp"
                     android:layout_marginLeft="30dp"
                     android:layout_marginTop="20dp"/>


    </RelativeLayout>




    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:textColor="@color/white"
            android:background="@drawable/button_border"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:text="تسجيل الدخول"/>


</LinearLayout>